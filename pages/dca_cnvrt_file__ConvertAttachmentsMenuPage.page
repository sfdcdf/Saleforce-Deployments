<apex:page tabStyle="Convert_Attachments_to_Files__tab">

    <apex:slds />

    <style>

        .slds-scope .menu-grid .slds-box {
            height: 100%;
        }

        .apexp .bPageBlock p {
            margin-bottom: inherit; /* undo classic styling so slds is applied */
        }

    </style>

    <div class="slds-scope">

        <div class="slds-m-around_large">

            <div class="slds-page-header slds-box">
                <nav role="navigation" aria-label="Breadcrumbs">
                    <ol class="slds-breadcrumb slds-list_horizontal">
                        <li class="slds-breadcrumb__item slds-text-title_caps"><a href="{!URLFOR($Page.ConvertAttachmentsMenuPage)}">Main Menu</a></li>
                    </ol>
                </nav>
                <p class="slds-page-header__title">
                    Convert Attachments to Files
                </p>
            </div>

            <div class="slds-m-around_large"/>

            <div class="menu-grid slds-grid slds-grid_vertical-stretch slds-grid_pull-padded-medium">

                <div class="slds-p-horizontal_medium slds-size_1-of-3">
                    <a href="{!URLFOR($Page.ConvertAttachmentsSettingsPage)}" style="text-decoration: none;">
                        <div class="slds-box slds-theme_shade">
                            <h3 class="slds-text-heading_small">1. Setup Conversion Settings</h3>
                            <p class="slds-text-color_default">
                                Customize sharing and conversion options.
                            </p>
                        </div>
                    </a>
                </div>

                <div class="menu-grid-col slds-p-horizontal_medium slds-size_1-of-3">
                    <a href="{!URLFOR($Page.ConvertAttachmentsRunOncePage)}" style="text-decoration: none;">
                        <div class="slds-box slds-theme_shade">
                            <h3 class="slds-text-heading_small">2. Convert Attachments</h3>
                            <p class="slds-text-color_default">
                                Run conversion job for specific parent records or for all attachments.
                            </p>
                        </div>
                    </a>
                </div>

                <div class="menu-grid-col slds-p-horizontal_medium slds-size_1-of-3">
                    <a href="{!URLFOR($Page.ConvertAttachmentsSchedulePage)}" style="text-decoration: none;">
                        <div class="slds-box slds-theme_shade">
                            <h3 class="slds-text-heading_small">3. Automate Conversion</h3>
                            <p class="slds-text-color_default">
                                Choose how often to convert new attachments to files.
                            </p>
                        </div>
                    </a>
                </div>

            </div>

            <div class="slds-m-around_large"/>

            <div class="menu-grid slds-grid slds-grid_vertical-stretch slds-grid_pull-padded-medium">

                <div class="slds-p-horizontal_medium slds-size_1-of-3">
                    <a href="{!URLFOR($Page.ConvertAttachmentsFAQPage)}" style="text-decoration: none;">
                        <div class="slds-box slds-theme_shade">
                            <h3 class="slds-text-heading_small">Troubleshooting</h3>
                            <p class="slds-text-color_default">
                                Frequently Asked Questions
                            </p>
                        </div>
                    </a>
                </div>

            </div>

            <div class="slds-m-around_large"/>

            <div class="slds-notify_container" style="position: relative;">
                <div class="slds-notify slds-notify_toast slds-theme_warning" role="alert">
                    <div class="slds-notify__content">
                        <h2 class="slds-text-heading_small">
                            Always test in a sandbox and backup your data first before performing conversions in production.
                        </h2>
                    </div>
                </div>
            </div>

            <div class="slds-m-around_large"/>

            <div class="slds-panel slds-align_absolute-center">
                <p>
